@{
    ViewBag.Title = "Paputka";
    Layout = "_Layout";
}
<section class="main-content">
    <div class="container">
        <div class="row">
            <div class="page-content">
                <div class="clearfix"></div>
                <div class="last-rides">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="page-sub-title textcenter">
                            <h2>RIDES</h2>
                            <div class="line"></div>
                        </div><!-- end .page-sub-title -->
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12" id="rides-list">
                        <div>
                            <article>
                                <div class="ride-content">
                                    <h3><input id="Search" type="text" placeholder="Search" /></h3>
                                </div>
                                <div class="container" style="margin-left:-90px">
                                    <ul class="ride-meta">
                                        <li class="ride-date">
                                            <a id="SortDate" class="changeToClick">
                                                <i class="fa fa-calendar"></i>
                                                Date
                                                <i class="fa fa-sort" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li class="ride-people" name="ascending">
                                            <a id="SortSeats" class="changeToClick">
                                                <i class="fa fa-user"></i>
                                                Seats
                                                <i class="fa fa-sort" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a id="SortPrice" name="ascending" class="changeToClick">
                                                <i class="fa fa-money" aria-hidden="true"></i>
                                                Price
                                                <i class="fa fa-sort" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a id="SortSource" name="ascending" class="changeToClick">
                                                <i class="fa fa-road" aria-hidden="true"></i>
                                                Source
                                                <i class="fa fa-sort" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a id="SortDestination" name="ascending" class="changeToClick">
                                                <i class="fa fa-road" aria-hidden="true"></i>
                                                Destination
                                                <i class="fa fa-sort" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </article>
                          <div id="Table"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- end .col-md-12 col-sm-12 col-xs-12 -->
                </div><!-- end .last-rides -->
            </div>
        </div>
    </div>
</section>
<div id="ModalMoreRead"></div>
<script type="text/javascript" src="~/scripts/MoreInformation.js"></script>
<script src="~/scripts/PaginateAndSort.js"></script>
<script>
    $('.changeToClick').css('cursor', 'pointer');
    $('.changeToDefault').css('cursor', 'default');
</script>