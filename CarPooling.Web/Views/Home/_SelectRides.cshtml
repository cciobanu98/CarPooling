@model List<CarPooling.Web.ViewModels.SelectedRidesViewModel>
@{
}
@foreach (var m in Model)
{
    <article class="ride-box clearfix">
        <div class="ride-content">
            <h3><a href="#">From @m.Source to @m.Destination</a></h3> ride by <a href="#">@m.Username</a>
        </div>
        <ul class="ride-meta">
            <li class="ride-date">
                <a href="#" class="tooltip-link" dara-original0title="Date" data-toggle="tooltip">
                    <i class="fa fa-calendar"></i>
                    @m.TravelStartDateTime
                </a>
            </li>
            <li class="ride-people">
                <a href="#" class="tooltip-link" dara-original-title="Date" data-toggle="tooltip">
                    <i class="fa fa-user"></i>
                    @m.Seats
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-file"></i>
                    @m.Price
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-file"></i>
                    @String.Format("{0:0.0}", m.DistanceFromSource)
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-file"></i>
                    @m.DistanceFromDestination.ToString("f2")
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-file"></i>
                    Read more
                </a>
            </li>
        </ul>
    </article>
}