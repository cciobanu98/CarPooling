@model List<CarPooling.DTO.SelectedRidesDTO>
@{
}
@foreach (var m in Model)
{
    <article class="ride-box clearfix">

        <div class="ride-content">
            <h3><a class="changeToDefault">From @m.Source to @m.Destination</a></h3> <span class="changeToDefault">ride by </span><a href="#" class="changeToClick">@m.Username</a>
        </div>
        <ul class="ride-meta">
            <li class="ride-date">
                <a class="changeToDefault">
                    <i class="fa fa-calendar"></i>
                    @m.TravelStartDateTime
                </a>
            </li>
            <li class="ride-people">
                <a class="changeToDefault">
                    <i class="fa fa-user"></i>
                    @m.Seats
                </a>
            </li>
            <li>
                <a id="read-more @m.Id" class="changeToClick">
                    <i class="fa fa-file"></i>
                    Read more
                </a>
            </li>
        </ul>
    </article>
}