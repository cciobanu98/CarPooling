@model List<CarPooling.Web.ViewModels.SelectedRidesViewModel>
@{
    ViewBag.Title = "Paputka";
    int? number = ViewData["Count"] as int?;
    int tpages = (int)number / 10;
}
<section class="main-content">
    <div class="container">
        <div class="row">
            <div class="page-content">
                <div class="clearfix"></div>
                <div class="last-rides">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="page-sub-title textcenter">
                            <h2>RIDES</h2>
                            <div class="line"></div>
                        </div><!-- end .page-sub-title -->
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12" id="rides-list">
                        <div>
                            @foreach (var m in Model)
                            {
                                <article class="ride-box clearfix">
                                    <div class="ride-content">
                                        <h3><a href="#">From @m.Source to @m.Destination</a></h3> ride by <a href="#">@m.Username</a>
                                    </div>
                                    <ul class="ride-meta">
                                        <li class="ride-date">
                                            <a href="#" class="tooltip-link" dara-original0title="Date" data-toggle="tooltip">
                                                <i class="fa fa-calendar"></i>
                                                @m.TravelStartDateTime
                                            </a>
                                        </li>
                                        <li class="ride-people">
                                            <a href="#" class="tooltip-link" dara-original-title="Date" data-toggle="tooltip">
                                                <i class="fa fa-user"></i>
                                                @m.Seats
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-money" aria-hidden="true"></i>
                                                @m.Price
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-road" aria-hidden="true"></i>
                                                @String.Format("{0:0.0}", m.DistanceFromSource) km
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-road" aria-hidden="true"></i>
                                                @String.Format("{0:0.0}", m.DistanceFromDestination) km
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-file"></i>
                                                Read more
                                            </a>
                                        </li>
                                    </ul>
                                </article>
                            }
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- end .col-md-12 col-sm-12 col-xs-12 -->
                </div><!-- end .last-rides -->
                <ul class="pagination">
                    @for (int i = 1; i <= tpages + 1; i++)
                    {
                        <li><a class="paginationRides">@i</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>