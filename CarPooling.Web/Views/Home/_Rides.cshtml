@model List<CarPooling.Web.ViewModels.LastRideViewModel>
@{
    int? number = ViewData["Count"] as int?;
    int tpages = (int)number / 10;
}
@foreach (var m in Model)
{
    <article class="ride-box clearfix">
        <div class="ride-content">
            <h3><a href="#">From @m.Source to @m.Destination</a></h3> ride by <a href="#">@m.User</a>
        </div>
        <ul class="ride-meta">
            <li class="ride-date">
                <a href="#" class="tooltip-link" dara-original0title="Date" data-toggle="tooltip">
                    <i class="fa fa-calendar"></i>
                    @m.StartDateTime
                </a>
            </li>
            <li class="ride-people">
                <a href="#" class="tooltip-link" dara-original-title="Date" data-toggle="tooltip">
                    <i class="fa fa-user"></i>
                    @m.Seats
                </a>
            </li>
            <li>
                <a id="read-more @m.Id">
                    <i class="fa fa-file"></i>
                    Read more
                </a>
            </li>
        </ul>
    </article>
}
<ul class="pagination">
    @for (int i = 1; i <= tpages + 1; i++)
    {
        <li><a class="paginationAll">@i</a></li>
    }
</ul>
<script src="~/scripts/AllRides.js"></script>
<script type="text/javascript" src="~/scripts/MoreInformation.js"></script>