@model CarPooling.DTO.SelectRideDTO
<div class="modal fade" id="EnrouteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>Ride Information</h3>
            </div><!-- end .modal-header -->
            <div class="modal-body">
                <div class="col-sm-12 col-md-12 col-xs-12">
                    <div class="page-content add-new-ride">
                        <form novalidate autocomplete="off" class="idealforms add-ride" id="selectRideForm" method="post" action="@Url.Action("SelectedRides", "SelectRide")">
                            <div class="field">
                                <input type="search" id="sourceSearch" placeholder="From?" />
                                <input asp-for="SourceLocationLat" />
                                <span asp-validation-for="SourceLocationLat" class="text-danger"></span>
                                <input asp-for="SourceLocationLng" />
                            </div>
                            <div class="field">
                                <input type="search" id="destinationSearch" placeholder="Where?" />
                                <input asp-for="DestinationLocationLat" />
                                <span asp-validation-for="DestinationLocationLat" class="text-danger"></span>
                                <input asp-for="DestinationLocationLng" />
                            </div>
                            <div>
                            </div>
                            <div class="field buttons">
                                <button type="submit" class="btn btn-lg green-color" id="SearchButton">Search</button>
                            </div>
                        </form>
                    </div><!-- end .page-content -->
                </div><!-- end .col-sm-12 -->
                <div class="clearfix"></div>
            </div><!-- end .row -->
        </div>
    </div>
</div>